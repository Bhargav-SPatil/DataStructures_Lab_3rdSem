#include <stdio.h>
#include <ctype.h>
#include <stdbool.h>
#include <string.h>

#define size 20
void push(char expr);
char pop();
bool isEmpty();
void conversion(char expression[], int x);

char expression[size];
char postfix[size];
char stack[size];
int top=-1, n;

int main(){
    printf("Enter the expression: ");
    scanf("%s", expression);
    n=strlen(expression);
    conversion(expression, n);
    return 0;
}

void push(char expr){
    top++;
    stack[top]=expr;
}

char pop(){
    return(stack[top--]);
}

bool isEmpty(){
    if(top==-1)
        return true;
    else
        return false;
}

int priority(char symbol){
    if(symbol=='^')
    return 3;
    else if(symbol == '*' || symbol == '/')
    return 2;
    else if(symbol == '+' || symbol == '-')
    return 1;
}

void conversion(char expr[], int x){
    int i,k=0;
    for(i=0; i<x; i++){
        if(expr[i] == '(')
        push(expr[i]);
        else{
            if(isalnum(expr[i]))
            postfix[k++] = expr[i];
            else if(expr[i]==')'){
                while(stack[top] != '(')
                postfix[k++] = pop();
                pop();                
            }else{
                while(priority(stack[top]) >= priority(expr[i]))
                postfix[k++] = pop();
                push(expr[i]);
            }
        }
    }
    while(!isEmpty()){
        postfix[k++] = pop();
    }
    postfix[k]='\0';
    printf("%s", postfix);
}
