#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>
#define size 5

int pr_queue[size], f=-1, r=-1;


bool isEmpty(){
    if(f==-1 && r==-1)
    return true;
    else
    return false;
}

bool isFull(){
    if(r==size-1)
    return true;
    else
    return false;
}

void enqueue(int x){
    if(isFull()){
        printf("Queue is full!");
    }else if(isEmpty()){
        r=f=0;
        pr_queue[r]=x;
    }else{
        r++;
        check(x);
        
    }
}

void dequeue(){
    if(isEmpty())
    printf("Queue is Empty!");
    else if(r==f)
    f=r=-1;
    else
    f++;
}

void check(int x){
    int i=0, p=1000;
    for(i=f; i<r; i++){
        if(x<=pr_queue[i]){
            p=i;
            break;
        }
    }

    for(i=r-1; i>=p; i--)
        pr_queue[i+1] = pr_queue[i];
    pr_queue[p] = x;
}

void display(){
    int i;
    if(isEmpty())
    printf("Queue is Empty! \n");
    else{
        printf("The Queue is: \n");
        for(i=f; i<=r; i++)
        printf("%d \n", pr_queue[i]);
    }
}


int main(){
    int c, x;
    while(1){
    printf("Please make your choice: ");
    printf("1. Enqueue \t\t 2. Dequeue \t\t 3. Display \t\t 4. Exit \n");
    scanf("%d", &c);
    switch(c){
        case 1:{
            printf("Enter the value to be added to the queue: ");
            scanf("%d", &x);
            enqueue(x);
        }
        break;
        case 2: dequeue();
        break;
        case 3: display();
        break;
        case 4: exit(0);
        break;
        default: printf("Please enter a valid choice");
        break;
    }
    }
    return 0;
}
