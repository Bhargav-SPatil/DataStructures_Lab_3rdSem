#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>
#define size 3

int r=-1, f=-1, n = size;
int A[size];

bool isEmpty(){
    if(r==-1 && f==-1)
    return true;
    else
    return false;
}

bool isFull(){
    if((r+1)%n == f)
    return true;
    else
    return false;
}

void enqueue(int x){
    if(isEmpty()){
        r=f=0;
        A[r]=x;
    }else{
        r=(r+1)%n;
        A[r]=x;
    }
}

void dequeue(){
    if(isEmpty())
    printf("Queue is Empty!");
    else if((f+1)%n == r)
    f=r=-1;
    else
    f=(f+1)%n;
    
    if(isFull()){
        printf("Queue is full! \n");
    }
}

void display(){
    int i;
    if(isEmpty()){
        printf("Queue is Empty! \n");
    }else{
        printf("The Queue is: \n");
        for(i=f; i!=r; i=(i+1)%n)
        printf("%d \n", A[i]);
        printf("%d \n", A[r]);
    }
}

int main(){
    int c, x;
    while(1){
    printf("Please make your choice: ");
    printf("1. Enqueue \t\t 2. Dequeue \t\t 3. Display \t\t 4. Exit \n");
    scanf("%d", &c);
    switch(c){
        case 1:{
            if(isFull()){
                printf("Queue is full! \n");
            }else{
                printf("Enter the value to be added to the queue: ");
                scanf("%d", &x);
                enqueue(x);
            }
        }
        break;
        case 2: dequeue();
        break;
        case 3: display();
        break;
        case 4: exit(0);
        break;
        default: printf("Please enter a valid choice \n");
        break;
    }
    }
    return 0;
}
